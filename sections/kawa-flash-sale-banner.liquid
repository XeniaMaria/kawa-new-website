{{ 'kawa-flash-sale-banner.css' | asset_url | stylesheet_tag }}

{% style %}
  .kawa-flash-sale-banner {
    text-align: center;
    position: relative;
    background-size: initial;
    background-repeat: no-repeat;
    background-position: top center;
    background-image: url('{{ section.settings.bg_image | image_url }}');
  }
  @media screen and (max-width: 768px) {
    .kawa-flash-sale-banner {
      background-image: url('{{ section.settings.bg_image_mb | image_url }}');
    }
  }
{% endstyle %}

<div class="kawa-flash-sale-banner">
  <div class="banner-inner">
    <h3 class="banner-subtitle">
      {{ section.settings.subtitle }}
    </h3>
    <h1 class="banner-title">
      {{ section.settings.title }}
    </h1>
    <div class="banner-des hide-more">
      {{ section.settings.des }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "flash sale banner",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "背景图"
    },
    {
      "type": "image_picker",
      "id": "bg_image_mb",
      "label": "背景图(移动端)"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "子标题"
    },
    {
      "type": "text",
      "id": "title",
      "label": "标题"
    },
    {
      "type": "html",
      "id": "des",
      "label": "描述"
    }
  ]
}
{% endschema %}
