{{ "kawa-product-video-blocks.css" | asset_url | stylesheet_tag }}

<div class="kawa-product-video-blocks">
  <nav class="nav">
    <ol class="kawa-breadcrumbs">
      <li>
        <a href="{{ pages['support-center'].url }}">
          Kawa Support
        </a>
      </li>
      <li>
        {{ page.title }}
      </li>
    </ol>
  </nav>
  <h2 class="section-title">
    {{ section.settings.title }}
  </h2>
  <div class="blocks-wrap">
    {%- for block in section.blocks -%}
      <li {{ block.shopify_attributes }}>
        <a href="{{ block.settings.block_page.url }}">
          <img src="{{ block.settings.block_img | image_url }}" width="100" height="100" loading="lazy"/>
          <p>
            {{ block.settings.block_title }}
          </p>
        </a>
      </li>
    {%- endfor -%}
  </div>
</div>

{% schema %}
  {
    "name": "product video 块",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "标题"
      }
    ],
    "blocks": [
      {
        "type": "product-block",
        "name": "产品视频块",
        "settings": [
          {
            "type": "text",
            "id": "block_title",
            "label": "块文本"
          }, {
            "type": "image_picker",
            "id": "block_img",
            "label": "块图片"
          }, {
            "type": "page",
            "id": "block_page",
            "label": "对应的页面"
          }
        ]
      }
    ]
  }
{% endschema %}