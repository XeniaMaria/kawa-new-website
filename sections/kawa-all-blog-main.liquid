{{ "kawa-all-blog-main.css" | asset_url | stylesheet_tag }}

<div class="kawa-all-blog-main">
    <div class="blog-title">
        <h1>
            {{ blog.title }}
        </h1>
    </div>
    <div class="blogs-container">
        <div class="left-panel">
            {%- for article in blog.articles limit: 3 -%}
                <div class="article-card">
                    <p class="blog-mark">
                        {{ blog.title }}
                    </p>
                    <a href="{{ article.url }}">
                        <div class="article-img" style="background-image: url({{ article.image | image_url }});">
                        </div>
                        <p class="article-excerpt" title="{{ article.excerpt_or_content }}">
                            {{ article.excerpt_or_content }}
                        </p>
                    </a>
                </div>
            {%- endfor -%}
        </div>
        <div class="right-panel">
            {%- for article in blog.articles offset: 3 limit: 5 -%}
                <div class="article-block">
                    <a href="{{ article.url }}">
                        <div class="article-info">
                            <p class="article-block__title">{{ article.title }}</p>
                            <p class="article-block__excerpt" title="{{ article.excerpt_or_content }}">
                                {{ article.excerpt_or_content }}
                            </p>
                        </div>
                        <div class="article-block__img" style="background-image: url({{ article.image | image_url }});">
                        </div>
                    </a>
                </div>
            {%- endfor -%}
        </div>
    </div>
</div>