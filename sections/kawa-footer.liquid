{{ 'kawa-footer.css' | asset_url | stylesheet_tag }}

<div class="kawa-footer">
  <div class="footer-container mw-1200-c">
    <div class="footer-contact">
      <div class="contact-title">Contact us</div>
      <ul class="flex-b text-white">
        <li class="flex">
          <span
            class="iconify"
            data-icon="bx:phone-call"
            data-width="24"
            data-height="24"
          ></span>
          <p>
            {% if settings.show_phone %}
              CN: {{ shop.phone }}
              <br>
            {% endif %}
            Mon-Sat 6:00AM - 6:00PM (PT)
            <br>
            Sun 7:00AM - 4:00PM (PT)
          </p>
        </li>
        <li class="flex">
          <span
            class="iconify email-icon"
            data-icon="bx:mail-send"
            data-width="24"
            data-height="24"
          ></span>
          <p>
            <a
              href="mailto:{{ shop.email }}?ref=footer"
              title="mailto:{{ shop.email }}"
              class="kawa-email"
            >
              {{- shop.email }}
            </a>
          </p>
        </li>
        <li class="flex">
          <span
            class="iconify"
            data-icon="carbon:chat-bot"
            data-width="24"
            data-height="24"
          ></span>
          <p>
            <a href="#">Website Live Chat</a>
            <br>
            Mon-Fri 9:00 AM-5:00 PM (PT)
          </p>
        </li>
      </ul>
    </div>
    <div class="footer-maps">
      <ul class="footer-category">
        {%- for link in linklists.footer.links -%}
          <li>
            <div class="footer-title">
              {{ link.title }}
              <i class="fold"> </i>
            </div>
            <ul>
              {%- for sub_link in link.links -%}
                <li>
                  {{ sub_link.title | link_to: sub_link.url }}
                </li>
              {%- endfor -%}
            </ul>
          </li>
        {%- endfor -%}
      </ul>
      <div class="footer-app-download">
        <div class="footer-download-title">Download App</div>
        <div class="footer-divide-line"></div>
        <div class="footer-all-app">
          <div class="app-wrap">
            <figure class="app-icon">
              <img
                src="{{ settings.app_download_logo | image_url }}"
                alt="{{ settings.app_download_name }}"
                width="100"
                height="100"
                loading="lazy"
              >
            </figure>
            <p class="app-name">
              {{ settings.app_download_name }}
            </p>
            <div class="app-box">
              <ul class="app-stores">
                <li>
                  <a href="{{ settings.app_download_ios }}" target="_blank">
                    <img
                      src="{{ settings.app_store_img | image_url }}"
                      width="148"
                      height="42"
                      loading="lazy"
                    >
                  </a>
                </li>
                <li>
                  <a href="{{ settings.app_download_android }}" target="_blank">
                    <img
                      src="{{ settings.google_play_img | image_url }}"
                      width="148"
                      height="42"
                      loading="lazy"
                    >
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <div class="app-wrap">
            <figure class="app-icon">
              <img
                src="{{ settings.app_download_logo_2 | image_url }}"
                alt="{{ settings.app_download_name_2 }}"
                width="100"
                height="100"
                loading="lazy"
              >
            </figure>
            <p class="app-name">
              {{ settings.app_download_name_2 }}
            </p>
            <div class="app-box">
              <ul class="app-stores">
                <li>
                  <a href="{{ settings.app_download_ios_2 }}" target="_blank">
                    <img
                      src="{{ settings.app_store_img | image_url }}"
                      width="148"
                      height="42"
                      loading="lazy"
                    >
                  </a>
                </li>
                <li>
                  <a href="{{ settings.app_download_android_2 }}" target="_blank">
                    <img
                      src="{{ settings.google_play_img | image_url }}"
                      width="148"
                      height="42"
                      loading="lazy"
                    >
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="payment-list">
        {%- for type in shop.enabled_payment_types -%}
          {{ type | payment_type_svg_tag }}
        {%- endfor -%}
      </div>
    </div>
    <div class="footer-app-download-mb">
      <div class="download-title-mb">
        <div class="divide-line-mb"></div>
        <p>Download App</p>
        <div class="divide-line-mb"></div>
      </div>
      <div class="footer-all-app">
        <div class="app-wrap">
          <figure class="app-icon">
            <img
              src="{{ settings.app_download_logo | image_url }}"
              alt="{{ settings.app_download_name }}"
              width="100"
              height="100"
              loading="lazy"
            >
          </figure>
          <p class="app-name">
            {{ settings.app_download_name }}
          </p>
          <div class="app-box">
            <ul class="app-stores">
              <li>
                <a href="{{ settings.app_download_ios }}" target="_blank">
                  <img
                    src="{{ settings.app_store_img | image_url }}"
                    width="148"
                    height="42"
                    loading="lazy"
                  >
                </a>
              </li>
              <li>
                <a href="{{ settings.app_download_android }}" target="_blank">
                  <img
                    src="{{ settings.google_play_img | image_url }}"
                    width="148"
                    height="42"
                    loading="lazy"
                  >
                </a>
              </li>
            </ul>
          </div>
        </div>
        <div class="app-wrap">
          <figure class="app-icon">
            <img
              src="{{ settings.app_download_logo_2 | image_url }}"
              alt="{{ settings.app_download_name_2 }}"
              width="100"
              height="100"
              loading="lazy"
            >
          </figure>
          <p class="app-name">
            {{ settings.app_download_name_2 }}
          </p>
          <div class="app-box">
            <ul class="app-stores">
              <li>
                <a href="{{ settings.app_download_ios_2 }}" target="_blank">
                  <img
                    src="{{ settings.app_store_img | image_url }}"
                    width="148"
                    height="42"
                    loading="lazy"
                  >
                </a>
              </li>
              <li>
                <a href="{{ settings.app_download_android_2 }}" target="_blank">
                  <img
                    src="{{ settings.google_play_img | image_url }}"
                    width="148"
                    height="42"
                    loading="lazy"
                  >
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <ul class="social-media-wrap">
      {%- render 'kawa-social-list' -%}
    </ul>
    <p class="footer-copyright">
      {{ settings.copyright_text }}
    </p>
  </div>
</div>

<script>
  (function () {
    if (window.innerWidth <= 768) {
      const allFooterCategory = document.querySelectorAll('.kawa-footer .footer-category > li');
      Array.from(allFooterCategory).forEach((footer) => {
        footer.addEventListener('click', () => {
          if (footer.classList.contains('active')) {
            footer.classList.remove('active');
          } else {
            Array.from(allFooterCategory).forEach((f) => {
              f.classList.remove('active');
            });
            footer.classList.add('active');
          }
        });
      });
    }
  })();
</script>

