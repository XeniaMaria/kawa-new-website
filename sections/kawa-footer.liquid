          <div class="app-box">
            <ul class="app-stores">
              <li>
                <a href="{{ settings.app_download_ios_2 }}" target="_blank">
                  <img
                    src="{{ settings.app_store_img | image_url }}"
                    width="148"
                    height="42"
                    loading="lazy"
                  >
                </a>
              </li>
              <li>
                <a href="{{ settings.app_download_android_2 }}" target="_blank">
                  <img
                    src="{{ settings.google_play_img | image_url }}"
                    width="148"
                    height="42"
                    loading="lazy"
                  >
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <ul class="social-media-wrap">
      {%- render 'kawa-social-list' -%}
    </ul>
    <p class="footer-copyright">
      {{ settings.copyright_text }}
    </p>
  </div>
</div>

<script>
  (function () {
    if (window.innerWidth <= 768) {
      const allFooterCategory = document.querySelectorAll('.kawa-footer .footer-category > li');
      Array.from(allFooterCategory).forEach((footer) => {
        footer.addEventListener('click', () => {
          if (footer.classList.contains('active')) {
            footer.classList.remove('active');
          } else {
            Array.from(allFooterCategory).forEach((f) => {
              f.classList.remove('active');
            });
            footer.classList.add('active');
          }
        });
      });
    }
  })();
</script>

