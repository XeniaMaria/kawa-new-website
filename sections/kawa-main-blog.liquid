{{ "kawa-main-blog.css" | asset_url | stylesheet_tag }}

<div class="kawa-main-blog">
  {%- render 'kawa-support-breadcrumbs', type: 'blog'
    , sub_page: blog.metafields.custom.parent_page.value -%}
  <div class="blog-content">
    <section>
      <header class="blog-header">
        <h1>
          {{ blog.title }}
        </h1>
      </header>
      <ul class="article-list">
        {%- for article in blog.articles -%}
          <li>
            <a href="{{ article.url }}">
              {{ article.title }}
            </a>
          </li>
        {%- endfor -%}
      </ul>
    </section>
  </div>
</div>