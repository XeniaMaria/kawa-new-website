{%- comment -%}
   公共搜索框
   Accept:
   - type: {String} 搜索框类型: page\product\article,不指定用search.types
{%- endcomment -%}

<style>
.kawa-common-search {
  max-width: 600px;
  width: 100%;
  margin: 0 auto;
  border: none;
  display: block;
  position: relative;
}

.kawa-common-search .support-search-form {
  position: relative;
  border-radius: 30px;
  border: 1px solid #ddd;
  transition: border 0.12s ease-in-out;
}
.kawa-common-search .support-search-form:focus-within {
  border-color: #00ade5;
}

.kawa-common-search .support-search-input {
  width: 100%;
  padding-left: 20px;
  border-radius: 23.5px;
  padding-right: 60px;
  height: 47px;
  -webkit-appearance: none;
  box-sizing: border-box;
  color: #666;
  flex: 1 1 auto;
  background-color: #fff;
  border: none;
  outline: none;
}
.kawa-common-search .support-search-input:focus-visible {
  box-shadow: none;
}

.kawa-common-search .support-search-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 47px;
  height: 47px;
  display: flex;
  align-items: center;
  justify-content: center;
  outline: none;
  border: none;
  background-color: #fff;
  border-radius: 23.5px;
}

.kawa-common-search .support-search-btn svg {
  width: 20px;
  height: 20px;
  color: #00ade5;
}

@media screen and (max-width: 768px) {
  .kawa-common-search {
    padding: 0 10%;
  }
}
</style>

<div class="kawa-common-search">
    <form action="{{ routes.search_url }}" role="search" class="support-search-form">
      {%- if type == blank -%}
        <input class="support-search-input" type="text" placeholder="Search" name="q" value="{{ search.terms }}">
        <input type="hidden" name="type" value="{{ search.types }}">
      {%- else -%}
        <input class="support-search-input" type="text" placeholder="Search" name="q" value="">
        <input type="hidden" name="type" value="{{ type }}">
      {%- endif -%}
      <button type="submit" class="support-search-btn">
          <svg class="icon icon-search" aria-hidden="true" focusable="false" role="presentation">
              <use href="#icon-search">
          </svg>
      </button>
    </form>
</div>